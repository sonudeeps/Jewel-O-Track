<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:arc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jewel.admin.jewel_new.Home"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/imageView2"
                android:paddingTop="20dp"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                arc:srcCompat="@mipmap/ic_launcher_round" />

        </RelativeLayout>

        <TextView
            android:text="Welcome to Jewel-O-Track"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="#EEEEEE"
            android:layout_marginTop="5dp"
            android:textStyle="normal|bold" />

        <View style="@style/Divider"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingRight="15dp"
            android:id="@+id/line"
            android:elevation="10dp"
            android:background="#3f82e2" />

        <TextView
            android:id="@+id/ifsc1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select your Jewel"
            android:padding="10dp"
            android:textSize="24sp"
            android:textColor="#F44336"
            android:layout_marginTop="20dp"
            android:textStyle="normal|bold"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp">

        </TextView>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/jewelsListView"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:dividerHeight="5dp">
        </ListView>

    </LinearLayout>

</RelativeLayout>






